    <!-- Base application theme. -->
    <style name="MyTowerTheme" parent="Theme.AppCompat.Light">
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/Theme.TowerMeasurement</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/Theme.TowerMeasurement</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">#EFBA60</item>
    </style>

    <style name="Widget.Theme.TowerMeasurement.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
