     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginLeft="6dp"
         android:layout_marginRight="2dp"
         android:paddingRight="8dp"
         android:layout_weight=".2"
         android:textSize="22dp"
         android:textStyle="bold"
         android:text="@string/search_form_main_name_ru"
         android:textColor="@color/black"
         />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:layout_margin="2dp"
         android:background="@color/black">
        <EditText
            android:id="@+id/etNameSearchFormDialogFragMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textSize="18dp"
            android:background="@color/white"
            android:inputType="number"
            android:hint="Наименование / Код объекта"
            />
     </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="2dp"
        android:paddingRight="8dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="#F1E7D6"
        android:text="@string/search_form_main_address_ru"
        android:textColor="@color/black"
        />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:layout_margin="2dp"
         android:orientation="vertical"
         android:background="@color/black">

        <EditText
            android:id="@+id/etAddressSearchFormDialogFragMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textSize="18dp"
            android:background="@color/white"
            android:inputType="text"
            android:hint="Адрес"
            />
     </LinearLayout>
