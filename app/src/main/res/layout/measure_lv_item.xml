<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/etinnershadow">
    <TextView
        android:id="@+id/tvMeasureNumber"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="2dp"
        android:paddingLeft="2dp"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="00">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/etLeftDD"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:hint="DD"
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/etLeftMM"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:hint="MM"
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/etLeftSS"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:hint="SS"
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />


            <TextView
                android:id="@+id/etRightDD"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:hint="DD"
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/etRightMM"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:hint="MM"
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/etRightSS"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:hint="SS"
                android:paddingTop="8dp"
                android:paddingLeft="2dp"
                android:paddingRight="6dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:text="Left angle"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="Right angle"
                android:textAlignment="center"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tvSideTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Side:" />

            <TextView
                android:id="@+id/tvSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:paddingLeft="4dp"
                android:text="0"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Azimuth:"/>
            <TextView
                android:id="@+id/tvAzimuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingLeft="4dp"
                android:textSize="18dp"
                android:text="000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:paddingLeft="4dp"
                android:text="Position:"/>
            <TextView
                android:id="@+id/tvBaseOrTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingLeft="4dp"
                android:text="Base"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Theo distance:"/>
            <TextView
                android:id="@+id/tvTheoDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingLeft="4dp"
                android:textSize="18dp"
                android:text="0000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="Theo height:"/>
            <TextView
                android:id="@+id/tvTheoHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:paddingLeft="4dp"
                android:textSize="18dp"
                android:text="0000"/>
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingLeft="6dp"
            android:textSize="22dp"
            android:text="KL"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <TextView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="16dp"
                android:text="S#"/>
            <TextView
                android:id="@+id/tvMeasureSecNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textAlignment="center"
                android:textSize="22dp"
                android:text="00"/>
        </TableRow>
    </LinearLayout>

</LinearLayout>