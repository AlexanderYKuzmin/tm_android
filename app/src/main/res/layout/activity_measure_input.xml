<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.measurement.MeasureInputActivity"
    android:background="#EFBA60">

    <TextView
        android:id="@+id/tvMeasureInputTitle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:text="@string/title_measure_activity_ru"
        android:textColor="#271457"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tlMeasureInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </TextView>
    <TableLayout
        android:id="@+id/tlMeasureInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvMeasureInputTitle"
        app:layout_constraintVertical_weight="1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">
            <EditText
                android:id="@+id/etContractor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingLeft="4dp"
                android:layout_weight="1"
                android:hint="@string/contractor_ru"
                android:textSize="24dp"
                android:background="@drawable/etinnershadow"/>

            <EditText
                android:id="@+id/etMeasureDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingLeft="4dp"
                android:hint="@string/date_hint_ru"
                android:inputType="date"
                android:textSize="24dp"
                android:background="@drawable/etinnershadow"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.6"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="@string/contractor_ru"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="@string/measure_date_ru"/>

        </TableRow>
        <TableRow
            android:id="@+id/trType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal">
        </TableRow>
    </TableLayout>
    <RadioGroup
        android:id="@+id/radioGroup_measureInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:scaleY="1.3"
        android:scaleX="1.3"
        app:layout_constraintTop_toBottomOf="@id/tlMeasureInput"
       >

        <RadioButton
            android:id="@+id/radio_measureGroup1_measureInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="2dp"
            android:buttonTint="@color/maincolor"
            android:text="Группа изм 1"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/radio_measureGroup2_measureInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:buttonTint="@color/maincolor"
            android:textSize="12dp"
            android:text="Группа изм 2" />
    </RadioGroup>

