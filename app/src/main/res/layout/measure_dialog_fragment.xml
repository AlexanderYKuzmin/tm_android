<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F1E7D6"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="Measurement #"/>
            <TextView
                android:id="@+id/tvMeasureNumber_measFrag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="0"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:layout_weight=".2"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Left angle:"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/black">
                <EditText
                    android:id="@+id/etLeftDeg_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="DD\u00b0"
                    />
                <EditText
                    android:id="@+id/etLeftMin_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="MM'"
                    />
                <EditText
                    android:id="@+id/etLeftSec_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="SS''"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:layout_weight=".2"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Right angle:"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/black">
                <EditText
                    android:id="@+id/etRightDeg_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="DD\u00b0"
                    />
                <EditText
                    android:id="@+id/etRightMin_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="MM'"
                    />
                <EditText
                    android:id="@+id/etRightSec_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="SS''"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:layout_weight=".2"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Azimuth:"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/black">
                <EditText
                    android:id="@+id/etAzimuth_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="000\u00B0"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:layout_weight=".2"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Theo height:"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/black">
                <EditText
                    android:id="@+id/etTheoHeight_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="0000"
                    />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="2dp"
                android:textAlignment="textEnd"
                android:paddingRight="8dp"
                android:layout_weight=".2"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Theo distance:"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/black">
                <EditText
                    android:id="@+id/etTheoDistance_measFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:hint="0000"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>